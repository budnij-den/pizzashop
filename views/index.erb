<h2>WELCOME TO PIZZASHOP</h2>

<div class="row">

  <% @products.each do |product| %>
  <div class="col-md-3" style="margin: 0 0 1em 1em; border: 1em solid grey; border-radius: 1em;<%= product.is_best_offer ? "background-color: gold" : nil %>;">
      <h4>
        <%= product.title %>
      </h4>
      <img src="<%= product.path_to_image%>" style="height: 150px">
      <p style="text-align: right;"><em>
        <b>
          <%= product.description %>
        </b>
      </em></p>
      <p>cost: <%= product.price %> â‚½</p>
      <p>size:<%= product.size %>cm</p>
      <p><%= product.is_spicy ? "spicy!" : "not spicy!" %></p>
      <p style="<%= product.is_veg ? nil : "padding: .7em;" %>"><%= product.is_veg ? "veg!" : nil %></p>
      <div style="text-align: right;">
        <button class="badge btn-success" style="margin-bottom: 1em; width: 100%;" onclick="addToCart(<%= product.id%>, '<%= product.title %>');">add to cart</button>
      </div>
  </div>
  <% end %>
 <div style="text-align: right; margin-right: 1em; margin-top: 7em;">
        <button class="badge btn-danger" style="transform: scale(2); height: 5em;" onclick="clearCart();">clear cart</button>
      </div>
       <div style="text-align: right; margin-right: 1em; margin-top: 7em;">
        <button class="badge btn-info" style="transform: scale(2); height: 5em;" onclick="getNumberOfItemsAtCart();">show cart</button>
      </div>

</div>


